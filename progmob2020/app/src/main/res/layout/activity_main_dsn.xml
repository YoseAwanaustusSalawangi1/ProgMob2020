<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DosenCrud.MainDsnActivity">

    <Button
        android:id="@+id/buttonLihatDsn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Lihat Dosen "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAddDsn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tambah Dosen "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLihatDsn" />

    <Button
        android:id="@+id/buttonHapusDsn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hapus Dosen "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUpdateDsn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonUpdateDsn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="UPDATE DOSEN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddDsn" />
</androidx.constraintlayout.widget.ConstraintLayout>